{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "read": {
      "./**/*": "allow",
      "~/**/*": "deny",
      "/etc/**/*": "deny",
      "/var/**/*": "deny"
    },
    "write": {
      "./**/*": "allow",
      "../../**/*": "deny"
    },
    "bash": "ask",
    "list": {
      "./**/*": "allow"
    }
  }
}
